<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

    <body>
        <%- include('./partials/nav.ejs')%>
            <div class="blogs contetn">
                <h2>All Blogs</h2>
                <% if(blogs.length>0){ %>
                    <% blogs.forEach(blog=> { %>
                        <a class="single" href="/blogs/<%=blog._id%>"></a>
                        <h3 class="title">
                            <%=blog.title%>
                        </h3>
                        <p class="snippet">
                            <%=blog.snippet%>
                        </p>
                        </a>
                        <%})%>
                            <% } else { %>
                                <p>There is no blog</p>
                                <% }%>
            </div>
    </body>

</html>